<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/sessions_list_row"
    android:layout_alignParentStart="true">

    <TextView
        android:id="@+id/session_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/number_of_entries_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/session_name"
        android:text="@string/number_of_entries_Text"
        android:layout_marginEnd="5dp" />

    <TextView
        android:id="@+id/session_entries_amount"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/session_name"
        android:layout_toEndOf="@+id/number_of_entries_info"/>

    <TextView
        android:id="@+id/started_infotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/started_on_date"
        android:layout_below="@+id/number_of_entries_info"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/session_startedon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number_of_entries_info"
        android:layout_toEndOf="@id/started_infotext" />

    <TextView
        android:id="@+id/endedon_infotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ended_on_date"
        android:layout_below="@+id/session_startedon"
        android:layout_alignStart="@+id/started_infotext"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/session_endedon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/session_startedon"
        android:layout_toEndOf="@+id/endedon_infotext"/>

</RelativeLayout>