<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="rtdsd.groupwork.sharedjournal.nearbyFragment.JournalSharingFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/journal_sharing_fragment" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/journal_sharing_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/share_journal_switch" />


</LinearLayout>
